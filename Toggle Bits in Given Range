//T.C. = O(n)

class Solution {
  public:
    int toggleBits(int n, int l, int r) {
        // code here
        int org=n;
        for (int i=l ; i<=r ; i++) {
            int mask = 1<<(i-1);
            int b=org&mask;
            if (b==0)  n= n| mask;
            else n= n^mask;
        }
        return n;
    }
};
